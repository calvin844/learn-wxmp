/* pages/search/search.wxss */
.searchContainer {
    padding: 0 20rpx;
}

.header {
    display: flex;
    height: 60rpx;
    line-height: 60rpx;
    padding: 10rpx 0;
}

.searchInput {
    position: relative;
    flex: 1;
    border-radius: 30rpx;
}

.searchInput input {
    margin: 0 0 0 50rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.clear {
    position: absolute;
    right: 30rpx;
    top: 0;
    font-size: 30rpx;
    z-index: 2;
}

.placeholder {
    font-size: 28rpx;
}

.cancel {
    width: 100rpx;
    text-align: center;
}

.searchIcon {
    position: absolute;
    left: 10rpx;
}

/* 热搜榜 */
.hotContainer {
    margin: 30rpx 0 0 0;
}

.hotContainer .title {
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1px solid #eee;
}

.hotList {
    display: flex;
    flex-wrap: wrap;
}

.hotList .hotItem {
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
}

.hotItem .order {
    margin: 0 10rpx;
}

.hotItem .iconImg {
    height: 20rpx;
    width: 35rpx;
    margin: 0 0 0 20rpx;
}

/* 搜索内容展示 */
.searchContent {
    color: #d43c33;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    border-bottom: 1px solid #d43c33
}

.searchItem {
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
}

.searchItem text {
    flex: 1;
    margin: 0 0 0 35rpx;
    border-bottom: 1px solid #eee;
    font-size: 26rpx;
}

/* 搜索历史 */
.history {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    margin: 20rpx 0;
}

.history .title {
    height: 50rpx;
    line-height: 50rpx;
    font-size: 28rpx;
}

.history .historyItem {
    height: 50rpx;
    line-height: 50rpx;
    font-size: 26rpx;
    background: #ededed;
    margin: 0 0 20rpx 20rpx;
    padding: 0 30rpx;
    border-radius: 20rpx;
}

.history .delete {
    position: absolute;
    bottom: 20rpx;
    right: 15rpx;
    font-size: 36rpx;
}